<body>
  <h1>Nonsense AI Generator</h1>
  <p>Poke BigBrain's Big Brain with your questions:</p>
  <input type="text" id="question" placeholder="Your question here" />
  <button onclick="generateAnswer()">Poke</button>
  <div id="answer"></div>

  <script>
    // Replace with your OpenAI API key
    const OPENAI_API_KEY = "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";

    async function generateAnswer() {
      const userQuestion = document.getElementById("question").value;
      const answerDiv = document.getElementById("answer");

      if (!userQuestion) {
        answerDiv.textContent = "Please poke BigBrain with a question!";
        return;
      }

      // Show loading text while waiting for the API response
      answerDiv.textContent = "Thinking... ðŸ¤”";

      try {
        // Make a POST request to OpenAI's API
        const response = await fetch("https://api.openai.com/v1/chat/completions", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": `Bearer ${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}`, // Add your API key here
          },
          body: JSON.stringify({
            model: "gpt-3.5-turbo",
            messages: [
              { role: "system", content: "You are a silly AI assistant that gives nonsense, quirky, and random answers to questions. The answers should be slightly related to the question. Keep responses short, funny, and unrelated." },
              { role: "user", content: userQuestion },
            ],
            max_tokens: 50,       // Controls response length
            temperature: 0.9,     // Increases randomness
          }),
        });

        if (!response.ok) {
          throw new Error("Failed to poke BigBrain's big brain.");
        }

        // Parse the response and display it
        const data = await response.json();
        const aiAnswer = data.choices[0]?.message?.content.trim();

        answerDiv.textContent = aiAnswer || "Hmm, BigBrain's big brain has failed you.";
      } catch (error) {
        console.error("Error fetching response:", error);
        answerDiv.textContent = "Oops! BigBrain went to sleep! Poke him again!";
      }
    }
  </script>
